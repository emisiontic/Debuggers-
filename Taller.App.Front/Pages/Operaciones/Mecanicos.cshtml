@page
@model Taller.App.Front.Pages.MecanicosModel
@{
}
<br>
<div class="row text-center">
    <div class="col-4">
        <h4 class="border border-warning border-2 border-top-0 border-start-0 pb-1"><b>MECANICOS</b></h4>
    </div>
</div>
<br>
<div class="row justify-content-end">
    <div class="col-md-3 col-sm-12">
        <div class="d-grid gap-2">
            <button class="btn btn-warning border border-dark" type="button" data-bs-toggle="modal"
                data-bs-target="#ModalOpMecanico"><i class="bi bi-person-badge"></i> Nuevo mecanico</button>
        </div>
    </div>
</div>
<br>

<div class="card shadow text-center">
    <div class="card-body">

        @if (Model.mecanicos.Count == 0)
        {
            
            <div class="alert alert-warning" role="alert">
                No existen mecánicos registrados
            </div>
        }
        else
        {
            <table class="table table-sm ">
                <thead>
                    <tr>
                        <th scope="col">Id</th>
                        <th scope="col">Nombre</th>
                        <th scope="col">Dirección</th>
                        <th scope="col">Télefono</th>
                        <th scope="col">Fecha Nacimiento</th>
                        <th scope="col">Acciones</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var m in Model.mecanicos)
                    {

                        <tr>
                            <th>@m.Id</th>
                            <td>@m.Nombre</td>
                            <td>@m.Direccion</td>
                            <td>@m.Telefono</td>
                            <td>@m.FechaNacimiento</td>
                            <td>
                                <button type="button" class="btn btn-outline-success btn-sm" data-bs-toggle="modal"
                            data-bs-target="#ModalVerOpMecanico"><i class="bi bi-eye"></i>Ver</button>
                                <button type="button" class="btn btn-outline-secondary btn-sm" data-bs-toggle="modal"
                            data-bs-target="#ModalOpMecanico"><i class="bi bi-pencil-square"></i>Editar</button>
                                <button type="button" class="btn btn-outline-danger btn-sm"><i
                                class="bi bi-x-lg"></i>Eliminar</button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>


        }


    </div>
</div>



<div class="modal fade" id="ModalOpMecanico" data-bs-backdrop="static" tabindex="-1" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-warning">
                <h5 class="modal-title text-dark" id="exampleModalLabel">Nuevo Mecanico</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <label for="documento" class="form-label"><b>Documento de identidad</b></label>
                <input type="text" class="form-control border border-dark p-2" id="documento"
                    placeholder="Ingresa tu documento de identidad">
                <br>
                <label for="nombres" class="form-label"><b>Nombres</b></label>
                <input type="text" class="form-control border border-dark p-2" id="nombres"
                    placeholder="Ingresa nombre">
                <br>
                <label for="apellidos" class="form-label"><b>Apellidos</b></label>
                <input type="text" class="form-control border border-dark p-2" id="apellidos"
                    placeholder="Ingresa apellidos">
                <br>
                <label for="fecha_nacimiento" class="form-label"><b>Fecha de nacimiento</b></label>
                <input type="date" class="form-control border border-dark p-2" id="fecha_nacimiento"
                    placeholder="Ingresa fecha de nacimiento">
                <br>
                <label for="direccion" class="form-label"><b>Dirección</b></label>
                <input type="text" class="form-control border border-dark p-2" id="direccion"
                    placeholder="Ingresa tu dirección">
                <br>
                <label for="celular" class="form-label"><b>Celular</b></label>
                <input type="text" class="form-control border border-dark p-2" id="celular"
                    placeholder="Ingresa tu celular">
                <br>
                <label for="ciudad" class="form-label"><b>Ciudad</b></label>
                <input type="text" class="form-control border border-dark p-2" id="ciudad" placeholder="Ingresa ciudad">
                <br>
                <label for="email" class="form-label"><b>Email</b></label>
                <input type="email" class="form-control border border-dark p-2" id="email"
                    placeholder="Ingresa tu email">
                <br>
                <label for="estudios" class="form-label"><b>Nivel de estudios</b></label>
                <select class="form-select border border-dark p-2" id="estudios">
                    <option selected>Seleccione</option>
                    <option value="bachiller">Bachiller</option>
                    <option value="tecnico">Técnico</option>
                    <option value="tecnologo">Tecnólogo</option>
                </select>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-warning text-white"><i class="bi bi-cloud-download"></i>
                    Guardar</button>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal"><i class="bi bi-x-square"></i>
                    Cancelar</button>
            </div>
        </div>

    </div>
</div>


<div class="modal fade" id="ModalVerOpMecanico" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-warning">
                <h5 class="modal-title" id="exampleModalLabel">Información de vehiculo</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-center">
                <h3>Documento <span class="badge bg-warning text-dark"> 123456</span></h3>
                <h5>Nombres <br> <span class="badge bg-secondary">Pepito</span></h5>
                <h5>Apellidos <br> <span class="badge bg-secondary">Perez</span></h5>
                <h5>Estudios <br> <span class="badge bg-secondary">Técnico</span></h5>
                <h5>Dirección <br> <span class="badge bg-secondary">Calle 45 # 12-18</span></h5>
                <h5>Celular <br> <span class="badge bg-secondary">3207451296</span></h5>
                <h5>Estado <br> <span class="badge bg-secondary">Activo</span></h5>
            </div>
        </div>
    </div>
</div>
